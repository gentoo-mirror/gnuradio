net-wireless/gr-mixalot:
    source: https://github.com/unsynchronized/gr-mixalot
    desc: POCSAG encoder blocks for GNU radio
    requires:
        - net-wireless/gr-compat
        - sci-libs/itpp

net-wireless/gr-ofdm:
    source: https://github.com/rwth-ti/gr-ofdm
    desc: A complete OFDM implementation including GUI for reasearch and teaching
    requires:
        - net-wireless/uhd
        - net-libs/zeromq
        - dev-python/numpy
        - sci-libs/scipy
        - dev-python/pyqwt:5
