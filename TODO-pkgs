    requires:
        - media-libs/mbelib

net-wireless/gr-zmqblocks:
    source: https://github.com/iohannez/gr-zmqblocks
    desc: Connect to flowgraphs over a network to perform remote procedure calls
    requires:
        - net-libs/zeromq
